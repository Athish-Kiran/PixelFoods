{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "pip install -r requirements.txt && python manage.py collectstatic --noinput"
    },
    "deploy": {
        "startCommand": "python manage.py migrate && gunicorn pixel_foods.wsgi:application --bind 0.0.0.0:$PORT --workers 2 --timeout 120",
        "healthcheckPath": "/",
        "healthcheckTimeout": 300,
        "restartPolicy": {
            "type": "on-failure",
            "maxRetries": 10
        }
    }
} 